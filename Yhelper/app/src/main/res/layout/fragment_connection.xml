<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".net.ConnectionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/ev_conn_name"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入文件名"/>
        <EditText
            android:id="@+id/ev_conn_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://www.baidu.com/" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_conn_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载内容"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"/>
            <Button
                android:id="@+id/btn_conn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存至SD卡"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"/>
            <Button
                android:id="@+id/btn_conn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/colorAccent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_conn"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>