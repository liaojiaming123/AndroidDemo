<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.EditTextFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/iv_base_fragment_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:text="EditText Demo"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText 默认:" />
        <EditText
            android:id="@+id/ev_base_fragment_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:hint="请输入关键字..."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText 背景边框:" />
        <EditText
            android:id="@+id/ev_base_fragment_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:hint="请输入关键字..."
            android:background="@drawable/fragment_text_view_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText 焦点全选:" />
        <EditText
            android:id="@+id/ev_base_fragment_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:text="请输入关键字..."
            android:textColor="@color/crimson"
            android:background="@drawable/fragment_text_view_background"
            android:selectAllOnFocus="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText 多行:" />
        <EditText
            android:id="@+id/ev_base_fragment_lines"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:text="当那繁华落尽，剩下的是满地忧伤。"
            android:minLines="2"
            android:textColor="@color/aqua"
            android:background="@drawable/fragment_text_view_background"
            android:selectAllOnFocus="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText password:" />
        <EditText
            android:id="@+id/ev_base_fragment_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:hint="请输入密码..."
            android:background="@drawable/fragment_text_view_background"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="EditText datetime:" />
        <EditText
            android:id="@+id/ev_base_fragment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:hint="请输入时间日期"
            android:background="@drawable/fragment_text_view_background"
            android:selectAllOnFocus="true"
            android:inputType="datetime"/>
    </LinearLayout>

</FrameLayout>