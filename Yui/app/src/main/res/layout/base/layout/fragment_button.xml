<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.ButtonFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/btn_base_fragment_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:text="Button ImageButton Demo"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="Button 默认:" />
        <Button
            android:id="@+id/btn_base_fragment_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按钮示例"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="Button 背景:" />
        <Button
            android:id="@+id/btn_base_fragment_background"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="按钮示例" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="Button 圆角:" />
        <Button
            android:id="@+id/btn_base_fragment_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fragment_button_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="按钮示例" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="Button 点击状态:" />

        <Button
            android:id="@+id/btn_base_fragment_selected"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fragment_button_selected"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="按钮示例" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="Button 自定义样式:" />

        <Button
            android:id="@+id/btn_base_fragment_click"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="按钮示例"
            android:theme="@style/MyButton" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="8dp"
            android:text="ImageButton :" />

        <ImageButton
            android:id="@+id/ibtn_base_fragment_simple"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/cc_download" />
    </LinearLayout>

</FrameLayout>