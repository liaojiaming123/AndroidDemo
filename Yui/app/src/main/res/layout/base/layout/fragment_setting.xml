<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_app_perm"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_fy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="权限管理"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_app_proce"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_fy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="进程管理"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_app_update"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_fy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="检测更新"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_app_y_help"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_fy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:text="下载Y助手APP（推荐）"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_app_about"
            android:layout_marginVertical="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_fy"/>
            <TextView
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关于软件"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"/>
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>