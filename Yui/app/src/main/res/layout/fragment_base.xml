<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.BaseFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_base_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_base_fragment_tv_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView文本框" />
        <Button
            android:id="@+id/btn_base_fragment_ev_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EditView输入框" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_base_fragment_iv_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ImageView图像视图" />
        <Button
            android:id="@+id/btn_base_fragment_btn_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button ImageButton按钮" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_base_fragment_check_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CheckBox Radio选择按钮" />
        <Button
            android:id="@+id/btn_base_fragment_toggle_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch Toggle开关按钮" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_base_fragment_progress_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ProgressBar进度条" />
        <Button
            android:id="@+id/btn_base_fragment_seek_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SeekBar拖动条" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_scroll_view_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ScrollView滚动条" />
        <Button
            android:id="@+id/btn_rating_bar_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RatingBar评分条" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_time_picker_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TimePicker时间组件" />
        <Button
            android:id="@+id/btn_date_picker_simple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DatePicker日期组件" />
        </LinearLayout>
        <TextView
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:text="暂时没有更多了"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>

</FrameLayout>