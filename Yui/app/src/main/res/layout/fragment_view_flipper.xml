<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pager.ViewFlipperFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/vf_tv_back"
                android:textColor="@color/mediumSpringGreen"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="前一页"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vf_tv1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="一"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vf_tv2"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="二"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vf_tv3"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="三"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vf_tv4"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="四"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/vf_tv_next"
                android:textColor="@color/mediumSpringGreen"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="后一页"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ViewFlipper
            android:id="@+id/view_flipper_simple"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>
</FrameLayout>